#Aruba: 12.5,-70.1
#Brazil: -13.7,-69.6
#CaboVerde: 15.8,-25.4
#Spain: 35.7,7.1
#Denmark: 53.5,4.5
#Malaysia: 1.5, 98.3
N_EDGES_PER_NODE_MIN <- 1
N_EDGES_PER_NODE_MAX <- 6
N_CATEGORIES <- 6
locations <- as.data.frame(matrix(
c(12.5,-70.1,-13.7,-69.6,15.8,-25.4,35.7,7.1,53.5,4.5,1.5,98.3),
nrow = 6,
ncol = 2,
byrow = TRUE,
dimnames = list(c("Aruba","Brazil","CaboVerde","Spain","Denmark","Malaysia"), c("lat","lon"))
))
locations$name <- rownames(locations)
locations$id <- c(1:nrow(locations))
rownames(locations) <- c(1:nrow(locations))
nodes <- locations
edges <- map_dfr(nodes$id, function(id) {
n <- floor(runif(1, N_EDGES_PER_NODE_MIN, N_EDGES_PER_NODE_MAX+1))
to <- sample(1:max(nodes$id), n, replace = FALSE)
to <- to[to != id]
categories <- sample(1:N_CATEGORIES, length(to), replace = TRUE)
weights <- runif(length(to))
data_frame(from = id, to = to, weight = weights, category = categories)
})
edges <- edges %>% mutate(category = as.factor(category))
# create the igraph graph object
g <- graph_from_data_frame(edges, directed = F, vertices = nodes)
